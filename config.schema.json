{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Add link",
  "properties": {
    "Shortcut": {
      "type": "string",
      "pattern": "^((([Cc][Tt][Rr][Ll]|[Aa][Ll][Tt]|[Ss][Hh][Ii][Ff][Tt])\\+){0,3}([a-zA-Z0-9]|F[1-9]|F1[0-2]))?$",
      "default": "Ctrl+Shift+L"
    },
    "Last open in": {
      "type": "string",
      "enum": ["Browser search", "Previewer"],
      "default": "Ctrl+Shift+L"
    },
    "Last search type": {
      "type": "string",
      "enum": ["Note", "Card", "Query"],
      "default": "Note"
    },
    "Last query": {
      "type": "string",
      "default": ""
    },
  }
}

